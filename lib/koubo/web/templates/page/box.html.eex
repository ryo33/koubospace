<h2><p><%= @name %>の箱</p></h2>
<%= form_for @conn, "/#{@name}/ask", [as: :box], fn _ -> %>
  <input type="text" name="item">
  <input type="submit" value="を恵んでくれ">
<% end %>

<%= for item <- @items do %>
  <%= form_for @conn, "/#{@name}/give", [as: :box], fn _ -> %>
    <%= item.item %>
    <input type="hidden" name="item" value="<%= item.item %>">
    <input type="submit" value="を恵む">
    現在: <%= item.count %>個
  <% end %>
<% end %>
